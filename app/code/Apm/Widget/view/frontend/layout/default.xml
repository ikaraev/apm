<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="3columns" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>

    <head>
        <css src="Apm_Widget::css/widget/contact.css"/>
    </head>

    <body>
        <referenceContainer name="page.wrapper">
            <referenceContainer name="main.content">

                <block name="widget.contacts" template="Apm_Widget::widget/contacts.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">Apm\Widget\ViewModel\WidgetContactViewModel</argument>
                    </arguments>
                </block>
            </referenceContainer>
        </referenceContainer>
    </body>
</page>
